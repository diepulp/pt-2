# Update these with your Supabase details from your project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY=your-anon-key

# Auth Bypass (AUTH-HARDENING v0.1)
# Required for dev auth bypass in development mode.
# Set to 'true' to enable DEV_AUTH_BYPASS â€” only works when NODE_ENV=development.
# Omit or set to any other value to disable bypass (production-safe default).
ENABLE_DEV_AUTH=true

# Performance Feature Flags
# PRD-018: BFF RPC for rating slip modal (69% latency reduction)
# Set to "true" to use single RPC call, "false" for legacy multi-query path
NEXT_PUBLIC_USE_MODAL_BFF_RPC=false
