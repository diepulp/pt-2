#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# API route sanity checks (replaces legacy service guardrails)
.husky/pre-commit-api-sanity.sh || exit 1

# Service layer anti-pattern detection (pattern-aware v2.0.0)
.husky/pre-commit-service-check.sh || exit 1

# Run lint-staged for all staged files
npm run lint-staged
